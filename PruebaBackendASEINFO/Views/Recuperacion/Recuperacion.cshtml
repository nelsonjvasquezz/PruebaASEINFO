@model PruebaBackendASEINFO.ViewModels.RecuperacionViewModel
@{
    ViewData["Title"] = "Crear nueva contraseña";
}

<h1 class="font-weight-light">Crear nueva contraseña</h1>

<form asp-action="Recuperacion" asp-controller="Recuperacion" method="post">
    @Html.HiddenFor(r => r.Token)
    <div class="form-group">
        <label>Nueva contraseña</label>
        @Html.PasswordFor(r => r.Contrasenia, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.Contrasenia, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Vuelve a escribir la contraseña</label>
        @Html.PasswordFor(r => r.ConfirmContra, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.ConfirmContra, null, new { @class = "text-danger" })
    </div>
    <div>
        <input type="submit" value="Recuperar" class="btn btn-primary" />
    </div>
</form>

